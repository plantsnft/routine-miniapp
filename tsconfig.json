{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "types": ["node"],
      "module": "commonjs",
      "moduleResolution": "node"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
